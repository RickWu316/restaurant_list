<!-- ./views/index.handlebars -->

<!-- search bar -->
<div class="container search-bar">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form action="/search">
                <h4 class="mb-2">尋找餐廳：</h4>
                <div class="input-group">
                    <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
                        aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby=" search-button">
                    <div class="input-group-append">
                        <button class="btn btn-major" type="submit" id="search-button"><i
                                class="fas fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



<div class="container mt-5">

    <div class="row">
        <div class="col-md-10 col-12 mx-auto d-flex justify-content-between mb-2">
            <a href="./create">
                <button class=" btn btn-light" <i class="fas fa-plus"></i>新增餐廳</button>
            </a>

            <div class="dropdown">
                <a class="btn btn-light dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                    data-toggle="dropdown" aria-expanded="false">
                    排序方式
                </a>
                <form action="./" method="POST">
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <li><a class="dropdown-item" href="/?sortType=AtoZ">A→Z</a></li>
                        <li><a class="dropdown-item" href="/?sortType=ZtoA">Z→A</a></li>
                        <li><a class="dropdown-item" href="/?sortType=category">類別</a></li>
                        <li><a class="dropdown-item" href="/?sortType=location">地區</a></li>
                    </ul>
                </form>
            </div>

        </div>
        <div class="col-md-10 col-12 mx-auto  d-flex">

            <div class="card-columns">
                {{#each restaurants}}
                <a href="/restaurants/{{this._id}}" class="text-secondary">
                    <div class="card mb-3">
                        <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                        <div class="card-body p-3">
                            <h6 class="card-title mb-1">{{this.name}}</h6>


                            <div class="restaurant-category mb-1">
                                <i class="fas fa-utensils pr-2"></i> {{this.category}}
                            </div>
                            <div class="d-flex">
                                <span class="badge badge-pill badge-danger font-weight-normal">
                                    {{this.rating}}
                                    <i class="fas fa-star fa-xs"></i>
                                </span>

                                <a href=" ./restaurants/{{ this._id }}/edit"><i class=" fas fa-edit "></i></a>
                                <form class="m-0" action=" ./restaurants/{{ this._id }}?_method=DELETE" method="POST"
                                    style="display: inline;">
                                    <button class="btn text-black p-0 align-top" type="submit"><i
                                            class="fas fa-trash-alt"></i></button>
                                </form>
                            </div>

                        </div>
                    </div>
                </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>