<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
    {{> message}}
    <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
        <div class="row mt-5 justify-content-center">
            <div class="col-4 text-secondary">中文店名</div>
            <div class="col-8 ">
                <input type="text" placeholder="請輸入中文店名" name="name" value="{{ restaurant.name }}">
            </div>
        </div>
        <div class="row mt-2 justify-content-center">
            <div class="col-4 text-secondary">英文店名</div>
            <div class="col-8 ">
                <input type="text" placeholder="請輸入英文店名" name="name_en" value="{{ restaurant.name_en }}">
            </div>
        </div>
        <div class="row mt-2 justify-content-center">
            <div class="col-4 text-secondary">類別</div>
            <div class="col-8 ">
                <input type="text" placeholder="請輸入餐廳類別" name="category" value="{{ restaurant.category }}">
            </div>
        </div>
        <div class="row mt-2 justify-content-center">
            <div class="col-4 text-secondary">照片</div>
            <div class="col-8 ">
                <input type="text" placeholder="image" name="image" value="{{ restaurant.image }}">
            </div>
        </div>
        <div class="row mt-2 justify-content-center">
            <div class="col-4 text-secondary">地址</div>
            <div class="col-8 ">
                <input type="text" placeholder="location" name="location" value="{{ restaurant.location }}">
            </div>
        </div>

        <div class="row mt-2 justify-content-center">
            <div class="col-4 text-secondary">電話</div>
            <div class="col-8 ">
                <input type="text" placeholder="phone" name="phone" value="{{ restaurant.phone }}">
            </div>
        </div>
        <div class="row mt-2 justify-content-center">
            <div class="col-4 text-secondary">google Map</div>
            <div class="col-8 ">
                <input type="text" placeholder="google_map" name="google_map" value="{{ restaurant.google_map }}">
            </div>
        </div>
        <div class="row mt-2 justify-content-center">
            <div class="col-4 text-secondary">評分</div>
            <div class="col-8 ">
                <input type="text" placeholder="rating" name="rating" value="{{ restaurant.rating }}">
            </div>
        </div>
        <div class="row mt-2 justify-content-center">
            <div class="col-4 text-secondary">描述</div>
            <div class="col-8 ">
                <input type="text" placeholder="description" name="description" value="{{ restaurant.description }}">
            </div>
        </div>

        <div class="row mt-5 justify-content-center">
            <button type="submit" class="btn btn-info">Save</button>
        </div>

    </form>

</div>