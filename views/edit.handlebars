<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">

    <table class="table table-borderless">
        <thead>

            <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
                <tr>
                    <th><a href="/"> back</a>
                </tr>
                <tr>
                    <th> <a>中文店名</a>
                    <th> <input type="text" placeholder="請輸入中文店名" name="name" value="{{ restaurant.name }}">
                </tr>
                <tr>
                    <th><a>英文店名</a>
                    <th><input type="text" placeholder="請輸入英文店名" name="name_en" value="{{ restaurant.name_en }}">
                </tr>
                <tr>
                    <th><a>類別</a>
                    <th><input type="text" placeholder="請輸入餐廳類別" name="category" value="{{ restaurant.category }}">
                </tr>
                <tr>
                    <th><a>照片</a>
                    <th><input type="text" placeholder="image" name="image" value="{{ restaurant.image }}">
                </tr>
                <tr>
                    <th><a>地址</a>
                    <th><input type="text" placeholder="location" name="location" value="{{ restaurant.location }}">
                </tr>
                <tr>
                    <th><a>電話</a>
                    <th><input type="text" placeholder="phone" name="phone" value="{{ restaurant.phone }}">
                </tr>
                <tr>
                    <th><a>google Map</a>
                    <th><input type="text" placeholder="google_map" name="google_map"
                            value="{{ restaurant.google_map }}">
                </tr>
                <tr>
                    <th><a>評分</a>
                    <th><input type="text" placeholder="rating" name="rating" value="{{ restaurant.rating }}">
                </tr>
                <tr>
                    <th><a>描述</a>
                    <th><input type="text" placeholder="description" name="description"
                            value="{{ restaurant.description }}">
                </tr>
                <tr>
                    <th>
                    <th>
                    <th><button type="submit">Save</button>
                </tr>


            </form>

    </table>
</div>